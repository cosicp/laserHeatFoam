FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
libs ("libsampling.so");

application     laplacianFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         100e-5;

deltaT          2e-7;

writeControl    runTime;

writeInterval   1e-5;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    meltPoolSurface
    {
        type isoSurface;
        libs ("libsampling.so");

        isoField T;
        isoValue 1878;   // melting temperature

        interpolate true;
        regularise true;

        writeControl timeStep;
        writeInterval 10;
    }
}



