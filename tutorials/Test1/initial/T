FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    leftWall
    {
      type		zeroGradient;
    }
    rightWall
    {
      type		zeroGradient;
    }

    topWall
    {
        type externalWallHeatFluxTemperature;
        mode coefficient;

        Ta uniform 300;        // ambient temperature (K)
        h  uniform 20;         // convection coefficient W/mÂ²/K

        epsilon uniform 0.3;   // emissivity
        sigma 5.67e-8;         // Stefan-Boltzmann constant

        kappaMethod solidThermo;
        value uniform 300;
    }

    bottomWall
    {
        type fixedValue;
        value uniform 300;
    }

    front
    {
	type		zeroGradient;
    }
    back
    {
      type		zeroGradient;
    }
    solidInterface
    {
      type		zeroGradient;
    }
}


